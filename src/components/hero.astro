---
import { Picture } from "@astrojs/image/components";
import heroImage from "assets/astronaut.webp";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon";
---

<main
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-16">
  <div class="py-6 md:order-1 hidden md:block">
    <Picture
      src={heroImage}
      alt="Astronaut buying cryptos"
      widths={[200, 400, 600]}
      aspectRatio="4:3"
      sizes="(max-width: 800px) 100vw, 620px"
      loading="eager"
      format="avif"
    />
  </div>
  <div>
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
      Buy & Sell Crypto Anywhere 
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      Trade your favorite cryptos P2P Web3-style. No KYC. Multi-chain. <wbr /> We buyback-and-burn our $KFIX token. On/off ramps launching Q3 2023 on Avalanche ðŸš€.
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        href="#"
        href="https://koinfix.zapier.app/beta"
        target="_blank"
        class="flex gap-1 items-center justify-center"
        rel="noopener">
        <Icon class="text-white w-5 h-5" name="bx:bxl-bitcoin" />
        Join Beta Program
      </Link>
      <Link
        size="lg"
        style="outline"
        rel="noopener"
        href="https://github.com/Panmoni"
        class="flex gap-1 items-center justify-center outline-kfblue"
        target="_blank">
        <Icon class="w-4 h-4" name="bx:bxl-github" />
        GitHub Repos
      </Link>
    </div>
  </div>
</main>
